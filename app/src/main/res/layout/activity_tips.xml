<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige2"
    tools:context=".tips">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/background_view" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/tips"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Hello, User!"
        android:textSize="34sp"
        android:textColor="@color/background"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/avatar"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/financial_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        android:text="Let me hook you up with some Financial Tips!"
        android:textSize="24sp"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_alignStart="@+id/avatar"
        android:layout_toEndOf="@id/avatar"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/financial_tips2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/financial_tips"
        android:layout_alignStart="@+id/avatar"
        android:layout_marginStart="3dp"
        android:layout_marginTop="66dp"
        android:text="Money without financial intelligence is money soon gone."
        android:textColor="@color/background"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_toEndOf="@id/avatar"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/financial_tips2"
        android:layout_alignStart="@+id/avatar"
        android:layout_marginStart="300dp"
        android:layout_marginTop="11dp"
        android:text="~Robert T. Kiyosaki~"
        android:textColor="@color/background"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_toEndOf="@id/avatar"
        tools:ignore="HardcodedText,SmallSp,TextContrastCheck" />

    <GridView
        android:id="@+id/gridViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:horizontalSpacing="10dp"
        android:listSelector="@color/beige11"
        android:numColumns="3"
        android:verticalSpacing="10dp">

    </GridView>

</RelativeLayout>
