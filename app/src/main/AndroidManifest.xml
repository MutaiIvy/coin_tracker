<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expensetrackersystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Coin Tracker"
        android:hardwareAccelerated="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseTrackerSystem">
        <activity
            android:name=".tips"
            android:exported="true" />
        <activity
            android:name=".login"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".register"
            android:exported="true">
        </activity>
        <activity
            android:name=".PieChartIncome"
            android:exported="true" />
        <activity
            android:name=".PieChart"
            android:exported="true" />
        <activity
            android:name=".PieChartBudget"
            android:exported="true" />
        <activity
            android:name=".PieChartGoals"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>